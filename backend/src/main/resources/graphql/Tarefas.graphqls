type Tarefa {
    id: ID!
    responsavel: String!
    descricao: String!
}
input TarefaInput {
    id: ID
    descricao: String!
    responsavel: String!
}

extend type Query {
    tarefas: [Tarefa]!
}

extend type Mutation {
    salvarTarefa(input: TarefaInput!): Tarefa!
    excluirTarefa(id: ID!): ID
    editarTarefa(input: TarefaInput): Tarefa!
}